#!/bin/bash

set -e
[ -n "$RUNAIENV_DEBUG" ] && set -x

if [[ $1 = "--description" ]] ; then
    echo "List all available runaienv commands"
    exit 0
fi

if [ "$1" = "--sh" ]; then
  sh="1"
fi

shopt -s nullglob

{
  for command_path in "$RUNAIENV_ROOT/libexec/runaienv-"*; do
    command="${command_path##*runaienv-}"
    if [ "$sh" = "1" ]; then
      if [ "${command:0:3}" = "sh-" ]; then
        echo "${command##sh-}"
      fi
    else
      echo "${command##sh-}"
    fi
  done
} | sort | uniq
