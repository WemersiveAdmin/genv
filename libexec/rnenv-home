#!/bin/bash

set -e
[ -n "$RNENV_DEBUG" ] && set -x

if [[ $1 = "--description" ]] ; then
    echo "Display the directory containing the configuration of this environment"
    exit 0
fi

options=($PWD $HOME $RNENV_ROOT)
for parent in ${options[@]}; do
  dir="$parent/.rnenv"
  if [ -d $dir ]; then
    echo $dir
    exit 0
  fi
done

if [[ "$1" = "--quiet" ]]; then
  exit 0
fi

{
  echo "Could not find any rnenv configuration directory."
  echo
  echo "Create a directory named '.rnenv' under one of the following directories:"
  echo "  1) Current working directory (i.e. \$PWD)"
  echo "  2) Home directory (i.e. \$HOME)"
  echo "  2) Installation directory of rnenv (i.e. \`rnenv root\`)"
  echo
} >&2

exit 1
